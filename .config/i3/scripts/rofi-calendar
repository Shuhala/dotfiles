#! /bin/sh

blockdate=$(date '+%a. %d. %b. %Y')

case "$BLOCK_BUTTON" in
    1|2|3) date=$(date '+%A, %d. %B')
export TERM=xterm
cal --color=always \
    | sed 's/\x1b\[[7;]*m/\<b\>\<u\>/g' \
    | sed 's/\x1b\[[27;]*m/\<\/u\>\<\/b\>/g' \
    | tail -n +2 \
    | rofi \
        -dmenu \
        -markup-rows \
        -no-fullscreen \
        -font "Monospace 10" \
        -hide-scrollbar \
        -bw 2 \
        -m -3 \
		-lines 6 \
        -theme-str '#window {anchor:northeast; location: northwest;}' \
        -eh 2 \
        -width -22 \
        -no-custom \
        -p "$date" > /dev/null 
    esac
echo $blockdate
date '+%d.%m.%Y'
